{% extends "AppBundle:Admin:layout.html.twig" %}

{% block title %}Supprimer un commentaire{% endblock %}
{% block body %}
	{{ form_start(form) }}
		<div class="flexRow">
			<div>
				{{ form_widget(form.deleteAction)}}
			</div>
			<div class="backChoiceTrip">
				<a href="{{path('delete_comment')}}"><button type="button">Retour</button></a>
			</div>
		</div>
		<table class="table">
			{% for comment in comments %}
				<tr>
					{% set commentIndex = comment.id %}
					<td class="comCheck">{{ form_widget(attribute(form, commentIndex)) }}</td>
					<td class="comText">{{comment.text}}</td>
					<td class="comLogin">{{comment.loginUser.login}}</td>
					<td class="comDate">{{comment.date | date("m/d/Y")}}</td>
				</tr>
			{% endfor %}
		</table>
	{{ form_end(form) }}
{% endblock %}